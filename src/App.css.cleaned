  transform: translate(10%,20%);
}

/* ==========================================
   问题词条样式 (Questions Section)
   ========================================== */

.questions-container {
  position: relative;
  width: 60vw;
  height: 100vh;
  border-radius: 10px;
  padding: 20px;
  box-sizing: border-box;
  z-index: 1001;
}

.questions-title {
  text-align: center;
  color: #7E3D25;
  font-size: 24px;
  margin-bottom: 20px;
}

.questions-grid {
  display: flex;
  justify-content: space-between;
  height: calc(100% - 60px);
}

.questions-column {
  width: 48%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.question-button {
  height: 13%;
  width: 20%;
  background: linear-gradient(rgba(128, 128, 128, 0.3), rgba(126, 61, 37, 0.62));
  color: white;
  border: 5px solid #f7a45788;
  border-radius: 0;
  padding: 5px 4px;
  margin: 15px;
  font-size: 20px;
  font-weight: bold;
  text-align: left;
  cursor: pointer;
  transition: all 0.3s ease;
  width: calc(100% - 30px);
  box-sizing: border-box;
  background-clip: content-box;
}

.question-button:hover {
  background: linear-gradient(rgba(128, 128, 128, 0.5), rgba(126, 61, 37, 0.5));
  transform: none;
  box-shadow: none;
}

/* ==========================================
   花朵动画样式 (Flower Animation)
   ========================================== */

.overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.flower-container {
  position: absolute;
  width: 70vw;
  height: 85vh;
  top: 7.5vh;
  left: 15vw;
  opacity: 1;
  z-index: 1001;
  animation: flowerShake 1s infinite;
  background-image: url('./assets/backgrounds/flower.png');
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
  border: none;
}

@keyframes flowerShake {
  0% { transform: rotate(0deg); }
  25% { transform: rotate(5deg); }
  50% { transform: rotate(0deg); }
  75% { transform: rotate(-5deg); }
  100% { transform: rotate(0deg); }
}

.action-button {
  padding: 14.4px 130px;
  font-size: 18px;
  font-weight: bold;
  background-color: transparent;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  transition: all 0.1s ease;
  position: relative;
  overflow: hidden;
  background: linear-gradient(45deg, #d4af37, #b8860b, #daa520, #d4af37);
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  color: transparent;
  text-shadow: 
    0 0 2px #d4af37,
    0 0 4px #d4af37,
    0 0 6px #b8860b;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.flower-fade-out {
  animation: flowerFadeOut 0.5s forwards;
}

@keyframes flowerFadeOut {
  0% { opacity: 1; transform: scale(1); }
  100% { opacity: 0; transform: scale(1.5); }
}

/* ==========================================
   视频容器样式 (Video Container)
   ========================================== */

.video-container {
  position: relative;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.9);
  border-radius: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
}

.close-video-button {
  position: absolute;
  top: 10px;
  right: 10px;
  background-color: transparent;
  color: white;
  border: none;
  border-radius: 50%;
  width: 30px;
  height: 30px;
  cursor: pointer;
  font-size: 16px;
  z-index: 10;
}