/* ==========================================
   全局样式
   ========================================== */

div {
  background-color: transparent;
  border: none;
}

.section-content {
  width: 100%;
  height: 100%;
}

.back-button {
  position: absolute;
  top: 70px;
  right: 70px;
  width: 70px;
  height: 50px;
  border: none;
  background-color: transparent;
  background-image: url("D:\HEHE\YEEXUN\monor\src\assets\backgrounds\back.png");  
  background-size: 100% 100%;
  cursor: pointer;
  z-index: 1002;
}

.martyr-info-page .overlay ~ .back-button {
  z-index: 1003;
  opacity: 1 !important;
  background-color: transparent !important;
}

.back-button:hover {
  background-color: transparent;
}

/* ==========================================
   首页样式 (Home Page)
   ========================================== */

.home-container {
  display: flex;
  width: 100vw;
  height: 100vh;
  background-image: url('./assets/backgrounds/BackGroundOne.jpg');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  flex-direction: row;
  flex-wrap: wrap;
  box-sizing: border-box;
}

.left-section {
  flex: 1 1 auto;
  display: flex;
  align-items: center;
  justify-content: center;
  background-image: url('./assets/backgrounds/DivBackground.png');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  background-size: 115%;
  cursor: pointer;
  margin: 16px;
  border-radius: 0;
  border: none;
  box-shadow: 
    0 0 15px rgba(0, 0, 0, 0.3),
    0 0 10px rgba(0, 0, 0, 0.2);
  position: relative;
  overflow: hidden;
}

.right-section {
  flex: 1 1 auto;
  display: flex;
  align-items: center;
  justify-content: center;
  background-image: url('./assets/backgrounds/DivBackground.png');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  background-size: 115%;
  cursor: pointer;
  margin: 16px;
  border-radius: 0;
  border: none;
  box-shadow: 
    0 0 15px rgba(0, 0, 0, 0.3),
    0 0 10px rgba(0, 0, 0, 0.2);
  position: relative;
  overflow: hidden;
}

.left-section::before,
.right-section::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  z-index: 1;
}

.left-section-content,
.right-section-content {
  position: relative;
  z-index: 2;
  text-align: center;
  color: white;
  padding: 20px;
}

.section-title {
  font-size: 2.5rem;
  font-weight: bold;
  margin-bottom: 10px;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
}

.section-subtitle {
  font-size: 1.2rem;
  margin-bottom: 20px;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
}

.enter-button {
  padding: 10px 30px;
  font-size: 1.2rem;
  background-color: rgba(210, 180, 140, 0.7);
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.enter-button:hover {
  background-color: rgba(210, 180, 140, 0.9);
}

/* ==========================================
   烈士页面样式 (Martyrs Page)
   ========================================== */

.martyrs-page {
  position: relative;
  width: 100vw;
  height: 100vh;
  background-image: url('./assets/backgrounds/BackGroundTwo.jpg');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  padding: 20px;
  box-sizing: border-box;
}

.martyrs-title {
  text-align: center;
  color: #7E3D25;
  font-size: 2.5rem;
  margin-bottom: 30px;
  text-shadow: 1px 1px 2px rgba(255, 255, 255, 0.5);
}

.martyrs-container {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20px;
  max-width: 1200px;
  margin: 0 auto;
}

.martyr-card {
  background: linear-gradient(rgba(128, 128, 128, 0.3), rgba(126, 61, 37, 0.62));
  color: white;
  border: 3px solid #fcb16c88;
  border-radius: 0;
  padding: 15px;
  text-align: center;
  cursor: pointer;
  transition: all 0.3s ease;
  font-size: 1.1rem;
  font-weight: bold;
  min-height: 150px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.martyr-card:hover {
  transform: scale(1.05);
  box-shadow: 0 0 15px rgba(252, 177, 108, 0.8);
}

/* ==========================================
   烈士信息页面样式 (Martyr Info Page)
   ========================================== */

.martyr-info-page {
  position: relative;
  width: 100vw;
  height: 100vh;
  background-image: url('./assets/backgrounds/BackGroundTwo.jpg');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20px;
  box-sizing: border-box;
}

.martyr-info-container {
  display: flex;
  width: 80%;
  height: 80%;
  background: rgba(128, 128, 128, 0.1);
  border: 2px solid #D2B48C;
  border-radius: 10px;
  transform: translateY(1%);
}

.martyr-info-content {
  width: 60%;
  height: 52%;
  flex: 1;
  padding: 20px;
  background-color: rgba(128, 128, 128, 0.1);
  border-radius: 10px;
  margin-left: 20px;
  overflow-y: visible;
  color: white;
  border: 2px dashed #D2B48C;
  align-self: flex-start;
  transform: translate(-10%,35%);
