}

.martyr-name-div {
  width: 100%;
  height: 60px;
  background-image: url('./assets/backgrounds/namedivpic.png');
  background-size: contain;
  background-repeat: no-repeat;
  background-position: left center;
  display: flex;
  align-items: left;
  justify-content: flex-start;
  font-size: 28px;
  font-weight: bold;
  color: #fbd46c;
  text-align: left;
  border: none;
  padding: 0 20px;
  box-sizing: border-box;
  margin-bottom: 20px;
 transform: translate(-4%,-130%);
}

.martyr-name {
  color: #d3b20f;
  font-size: 36px;
  text-align: center;
  margin-bottom: 20px;
}

.martyr-bio {
  color: white;
  font-size: 18px;
  line-height: 1.6;
  text-align: justify;
}

.martyr-actions {
  position: absolute;
  bottom: 20px;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
