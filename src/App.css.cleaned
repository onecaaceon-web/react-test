/* ==========================================
   留言页面样式 (Comments Page)
   ========================================== */

.comments-page {
  position: relative;
  width: 100vw;
  height: 100vh;
  background-image: url('./assets/backgrounds/BackGroundThree.jpg');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  padding: 20px;
  min-height: 100vh;
}

.comments-title {
  text-align: center;
  color: #7E3D25;
  font-size: 2rem;
  margin-bottom: 30px;
}

.comments-grid {
  position: center;
  width: 70%;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20px;
  margin: 250px 0 30px 0;
